.pull-left.widget-score id="score-node-#{node.id}" class=voted_widget_class(node)

  = link_to vote_on_node_path(node, 'for'), remote: true, method: :get, class: 'vote-up' do
    i.icon-chevron-up

  span.score title="#{number_with_delimiter(node.score)} overall / 900 facebook shares / 97 tweets"
    = number_to_human node.score, precision: 2, units: { thousand: 'k' }, format: '%n%u'

  = link_to vote_on_node_path(node, 'against'), remote: true, method: :get, class: 'vote-down' do
    i.icon-chevron-down